{
  "name": "normalized-map",
  "version": "1.2.0",
  "description": "An open-source Javascript map object that handles and normalizes string keys",
  "main": "index.js",
  "types": "index.d.ts",
  "scripts": {
    "build": "npm run buildUpdate && npm test && npm run typedoc",
    "buildUpdate": "npm run clean && npm run compile && npm run copyToDist",
    "copyToDist": "copyfiles -f *.txt *.md package.json dist",
    "typedoc": "typedoc --out ./docs ./src && touch ./docs/.nojekyll",
    "clean": "rimraf ./dist ./docs ./reports ./coverage",
    "test": "dotenv-ng --var JEST_JUNIT_OUTPUT_DIR=./reports -- jest --coverage",
    "lint": "eslint . --ext .ts --fix",
    "compile": "tsc && npm run lint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/szikszail/normalized-map.git"
  },
  "keywords": [],
  "author": "Laszlo Szikszai <sziklaszlo@gmail.com>",
  "license": "MIT",
  "files": [
    "**/*.js",
    "**/*.d.ts",
    "**/*.js.map"
  ],
  "engines": {
    "node": ">=12.0.0"
  },
  "bugs": {
    "url": "https://github.com/szikszail/normalized-map/issues"
  },
  "homepage": "https://github.com/szikszail/normalized-map#readme",
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/debug": "^4.1.12",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.2.2",
    "copyfiles": "^2.4.1",
    "dotenv-ng": "^1.3.0",
    "eslint": "^9.39.2",
    "globals": "^17.3.0",
    "jest": "^30.2.0",
    "jest-junit": "^16.0.0",
    "rimraf": "^6.1.2",
    "ts-jest": "^29.1.2",
    "typedoc": "^0.28.16",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0"
  },
  "dependencies": {
    "debug": "^4.3.4"
  },
  "jest": {
    "reporters": [
      "default",
      "jest-junit"
    ],
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "dist"
    ],
    "coverageDirectory": "./coverage",
    "collectCoverageFrom": [
      "./src/**/*.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 85,
        "functions": 85,
        "lines": 85,
        "statements": 85
      }
    }
  }
}
